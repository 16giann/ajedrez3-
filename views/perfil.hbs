
<div id="perfil">
  <h1 class="fade-in">Información del Perfil</h1>

  <main id="avatar-informacion">
    <section id="avatar">
      <h2>Avatar</h2>
      <img src="{{usuario.avatarUrl}}" alt="Avatar del usuario" id="imagen-avatar"/>

      <form action="/perfil/avatar" method="POST" enctype="multipart/form-data">
        <label for="archivo-avatar">Cambiar imagen de perfil:</label>
        <input type="file" id="archivo-avatar" name="archivo-avatar" accept="image/*" required/>
        <button type="submit">Subir Avatar</button>
      </form>
    </section>

    <section id="info">
      <form action="/perfil" method="POST">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" value="{{usuario.nombre}}" required/>

        <label for="correo">Correo Electrónico:</label>
        <input type="email" id="correo" name="correo" value="{{usuario.username}}" required/>

        <button type="submit">Guardar Cambios</button>
      </form>
    </section>
  </main>
</div>
